<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:padding="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".MainActivity"
    android:id="@+id/layout">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/bgImage"
        android:src="@drawable/woodtexture"
        android:contentDescription="woodtexture"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="6"
        android:layout_gravity="left|center_vertical"
        android:id="@+id/gridLayout"
        android:nestedScrollingEnabled="false"
        android:longClickable="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button"
            android:background="@drawable/button"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="buttonPressed"
            android:tag="0"
            android:enabled="false" />

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button2"
            android:background="@drawable/button"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="buttonPressed"
            android:tag="1"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button3"
            android:background="@drawable/button"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="buttonPressed"
            android:tag="2"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button4"
            android:background="@drawable/button"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="buttonPressed"
            android:tag="3"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button5"
            android:background="@drawable/button"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="buttonPressed"
            android:tag="4"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button6"
            android:background="@drawable/button"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="buttonPressed"
            android:tag="5"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button7"
            android:background="@drawable/button"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="buttonPressed"
            android:tag="6"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button8"
            android:background="@drawable/button"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="buttonPressed"
            android:tag="7"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button9"
            android:background="@drawable/button"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="buttonPressed"
            android:tag="8"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button10"
            android:background="@drawable/button"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="buttonPressed"
            android:tag="9"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button11"
            android:background="@drawable/button"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="buttonPressed"
            android:tag="10"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button12"
            android:background="@drawable/button"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="buttonPressed"
            android:tag="11"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button13"
            android:background="@drawable/button"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="buttonPressed"
            android:tag="12"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button14"
            android:background="@drawable/button"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="buttonPressed"
            android:tag="13"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button15"
            android:background="@drawable/button"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="buttonPressed"
            android:tag="14"
            android:enabled="false"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button16"
            android:background="@drawable/button"
            android:layout_row="4"
            android:layout_column="3"
            android:onClick="buttonPressed"
            android:tag="15"
            android:enabled="false"/>

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="#BBEEEEEE">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <Button
                android:text="Start"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:id="@+id/colorButton"
                android:background="@drawable/colorbutton"
                android:onClick="start"
                android:enabled="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:weightSum="1"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Tapps: "
                android:id="@+id/textTapps"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tapps"
                android:layout_alignTop="@+id/textTapps"
                android:layout_toEndOf="@+id/textTapps"
                android:text="0"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textAddTapps"
                android:text="+1"
                android:layout_alignTop="@+id/textTapps"
                android:layout_toEndOf="@+id/textTapps"
                android:visibility="invisible"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView3"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.64"
                android:text="Time: "
                android:gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/time"
                android:layout_alignTop="@+id/tapps"
                android:layout_toEndOf="@+id/colorButton"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DD010000"
        android:visibility="invisible"
        android:id="@+id/relout"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:id="@+id/restartButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:id="@+id/gameOverMenuButton"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/restartButton"
            android:layout_alignStart="@+id/restartButton"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Game Over!"
            android:id="@+id/textView"
            android:textSize="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:textColor="#FFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tapps:"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/textGameOverTapps"
            android:layout_toStartOf="@+id/restartButton"
            android:textColor="#FFF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textGameOverTapps"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/textView2"
            android:textColor="#FFF"/>

    </RelativeLayout>

</RelativeLayout>
